# Edvanta Backend Environment Variables
# Copy this file to .env and fill in the values for your environment

# Flask core settings
FLASK_ENV=development  # Set to "production" for production deployment
SECRET_KEY=change-me
PORT=5000
HOST=0.0.0.0

# Google Cloud / Vertex AI settings
GOOGLE_PROJECT_ID=your-gcp-project-id
GOOGLE_LOCATION=us-central1
GOOGLE_CREDENTIALS_JSON_BASE64=your-credentials-json-base64
VERTEX_MODEL_NAME=gemini-2.5-flash

# AI model parameters (optional - defaults provided)
VERTEX_TEMPERATURE=0.7
VERTEX_TOP_P=0.95
VERTEX_TOP_K=40
VERTEX_MAX_OUTPUT_TOKENS=1024

# Model IDs for specialized tasks
GENAI_TEXT_MODEL=gemini-2.5-flash
GENAI_IMAGE_MODEL=imagen-4.0-generate-preview-06-06

# Cloudinary settings for image/file uploads
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Alternative Cloudinary env var names (for backward compatibility)
# Only set these if you're not using the standard names above
# CLOUD_NAME=your-cloud-name
# CLOUDINARY_APIKEY=your-api-key
# CLOUDINARY_SECRET=your-api-secret

# CORS settings
ALLOWED_ORIGINS=*  # Use comma-separated list for multiple origins

# MongoDB settings
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=edvanta

# MongoDB collection names
MONGODB_QUIZ_COLLECTION=quizzes
MONGODB_QUIZ_HISTORY_COLLECTION=quiz_history
MONGODB_CHAT_COLLECTION=chats
MONGODB_VOICE_CHAT_COLLECTION=voice_chats
MONGODB_ACTIVE_SESSIONS_COLLECTION=active_sessions
