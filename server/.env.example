# example.env 

# Example environment variables for Edvanta backend
# Copy this file to .env and fill in the real values (never commit actual secrets)

# Flask
FLASK_ENV=development
SECRET_KEY=change-me

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret


# CORS (comma separated origins, * allows all; tighten in production)
ALLOWED_ORIGINS=*

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=edvanta
MONGODB_QUIZ_COLLECTION=quizzes
MONGODB_QUIZ_HISTORY_COLLECTION=quiz_history

# Google Cloud - Vertex AI
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_CREDENTIALS_JSON_BASE64=your-credentials-json-base64