# Example environment variables for Edvanta backend
# Copy this file to .env and fill in the real values (never commit actual secrets)

# Flask
FLASK_ENV=development
SECRET_KEY=change-me

# Vertex AI
VERTEX_PROJECT_ID=your-gcp-project-id
VERTEX_LOCATION=us-central1

# Vertex AI / Google GenAI (runtime credentials)
# Base64-encoded service account JSON for GOOGLE_APPLICATION_CREDENTIALS
GOOGLE_CREDENTIALS_JSON_BASE64=
# Project and region used by GenAI/Vertex
GCP_PROJECT_ID=
GOOGLE_CLOUD_PROJECT=
LOCATION=us-central1
GOOGLE_CLOUD_REGION=us-central1
# Optional: separate project for image generation (defaults to GCP_PROJECT_ID)
GCP_IMAGE_PROJECT_ID=

# Optional: override model IDs
GENAI_TEXT_MODEL=gemini-1.5-flash
GENAI_IMAGE_MODEL=imagen-3.0-generate-001

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
# If using unsigned upload preset + upload endpoint directly (demo style)
# CLOUDINARY_UPLOAD_URL=https://api.cloudinary.com/v1_1/<cloud-name>/video/upload
# UPLOAD_PRESET=podcast-visualizer

# ElevenLabs
ELEVENLABS_API_KEY=your-elevenlabs-key

# CORS (comma separated origins, * allows all; tighten in production)
ALLOWED_ORIGINS=*

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=edvanta
MONGODB_COLLECTION_NAME_1=quizzes
MONGODB_COLLECTION_NAME_2=quiz_history